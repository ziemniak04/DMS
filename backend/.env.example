# Application Settings
APP_NAME="DMS Backend API"
APP_VERSION="1.0.0"
DEBUG=false

# Dexcom API Configuration
# Get these from Dexcom Developer Portal: https://developer.dexcom.com/
DEXCOM_CLIENT_ID="your_client_id_here"
DEXCOM_CLIENT_SECRET="your_client_secret_here"
DEXCOM_REDIRECT_URI="http://localhost:8000/auth/callback"

# Dexcom Environment
# Options: sandbox, us, eu, jp
# Use 'sandbox' for development with test data
DEXCOM_ENVIRONMENT="sandbox"

# Firebase Configuration
FIREBASE_PROJECT_ID="your_firebase_project_id"
FIREBASE_CREDENTIALS_PATH="path/to/firebase-credentials.json"

# Database Configuration
# PostgreSQL connection string format: postgresql://username:password@host:port/database_name
# Examples:
#   Local PostgreSQL: postgresql://postgres:password@localhost:5432/dms_db
#   Supabase: postgresql://postgres:password@db.xxxxx.supabase.co:5432/postgres
#   Docker: postgresql://postgres:password@db:5432/dms_db
DATABASE_URL="postgresql://postgres:password@localhost:5432/dms_db"

# Encryption Key for storing sensitive data (Dexcom tokens)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY="your_encryption_key_here"

# CORS Origins (comma-separated list)
CORS_ORIGINS="http://localhost:3000,http://localhost:8080"

# Rate Limiting (Dexcom allows 60,000 requests per hour)
DEXCOM_RATE_LIMIT=60000
DEXCOM_RATE_WINDOW=3600
